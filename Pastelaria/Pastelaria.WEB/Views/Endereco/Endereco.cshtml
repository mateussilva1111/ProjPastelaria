@model Pastelaria.WEB.Application.Endereco.Model.EnderecoModel
@{
    ViewBag.Title = "Endereco";
}



<div class="container" style="margin-top: 60px;">
    <div class="tab-content">

        @if (Model != null && !String.IsNullOrEmpty(Model.Num_Endereco.ToString()))
        {

        <div role="tabpanel" class="tab-pane active" id="home">
            <form onsubmit="endereco.putEndereco(this); return false;">

                <div class="form-group">
                    <label>Bairro</label>
                    <input type="text" value="@Model.Bairro_Usuario" class="form-control" id="Bairro_Usuario" name="Bairro_Usuario">
                    <input type="hidden" value="@Model.Num_Endereco" class="form-control" id="Num_Endereco" name="Num_Endereco">
                </div>
                <div class="form-group">
                    <label for="form">Cidade</label>
                    <input type="text" value="@Model.Cid_Usuario" class="form-control" id="Cid_Usuario" name="Cid_Usuario">
                    <input type="hidden" value="@Model.Cod_CidUsuario" class="form-control" id="Cod_CidUsuario" name="Cod_CidUsuario">
                </div>
                <div class="form-group">
                    <label>Logradouro</label>
                    <input type="text" value="@Model.Tp_LogradouroUsuario" class="form-control" id="Tp_LogradouroUsuario" name="Tp_LogradouroUsuario">
                                 
                </div>
                <div class="form-group">
                    <label>Nome Logradouro</label>
                    <input type="text" value="@Model.Nome_Logradouro" class="form-control" id="Nome_Logradouro" name="Nome_Logradouro">
                </div>

                <div class="form-group">
                    <label>CEP</label>
                    <input type="text" value="@Model.CEP_Usuario" class="form-control" id="CEP_Usuario" name="CEP_Usuario">
                </div>
                <div class="form-group">
                    <label>Estado</label>
                    <input type="text" value="@Model.Est_Usuario" class="form-control" id="Est_Usuario" name="Est_Usuario">
                </div>
                <div class="form-group">
                    <label>Numero</label>
                    <input type="text" class="form-control" value="@Model.Num_Residencia" id="Num_Residencia" name="Num_Residencia">
                </div>

                <div class="form-group">
                    <label>Complemento</label>
                    <input type="text" value="@Model.Compl_Endereco" class="form-control" id="Compl_Endereco" name="Compl_Endereco">
                </div>

                <button type="submit" class="btn btn-primary">Atualizar</button>
            </form>
        </div>
        }
        else
        {
            <div role="tabpanel" class="tab-pane active" id="home">
                <form onsubmit="endereco.postEndereco(this); return false;">

                    <div class="form-group">
                        <label>Bairro</label>
                        <input type="text" value="" class="form-control" id="Bairro_Usuario" name="Bairro_Usuario">
                        
                    </div>
                    <div class="form-group">
                        <label for="form">Cidade</label>
                        <input type="text" value="" class="form-control" id="Cid_Usuario" name="Cid_Usuario">
                        <input type="hidden" value="1" class="form-control" id="Cod_CidUsuario" name="Cod_CidUsuario">
                    </div>
                    <div class="form-group">
                        <label>Logradouro</label>
                        <input type="text" value="" class="form-control" id="Tp_LogradouroUsuario" name="Tp_LogradouroUsuario">

                    </div>
                    <div class="form-group">
                        <label>Nome Logradouro</label>
                        <input type="text" value="" class="form-control" id="Nome_Logradouro" name="Nome_Logradouro">
                    </div>

                    <div class="form-group">
                        <label>CEP</label>
                        <input type="text" value="" class="form-control" id="CEP_Usuario" name="CEP_Usuario">
                    </div>
                    <div class="form-group">
                        <label>Estado</label>
                        <input type="text" value="" class="form-control" id="Est_Usuario" name="Est_Usuario">
                    </div>
                    <div class="form-group">
                        <label>Numero</label>
                        <input type="text" class="form-control" value="" id="Num_Residencia" name="Num_Residencia">
                    </div>

                    <div class="form-group">
                        <label>Complemento</label>
                        <input type="text" value="" class="form-control" id="Compl_Endereco" name="Compl_Endereco">
                    </div>

                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </form>
            </div>

        }

    </div>
</div>

<script src="~/Lib/Endereco.js?d=@DateTime.Now.Ticks"></script>
<script>
    endereco.init({
        urls: {
            putEndereco: '@Url.Action("PutEndereco", "Endereco")',
            postEndereco: '@Url.Action("PostEndereco", "Endereco")'
        }
    });

</script>   