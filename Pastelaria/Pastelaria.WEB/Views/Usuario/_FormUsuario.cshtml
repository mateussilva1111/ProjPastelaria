@model Pastelaria.WEB.Application.Usuario.Model.UsuarioModel

<div>
    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="home">
            <form>
                <div class="form-group">
                    <label for="inputName">id</label>
                    <input type="text" value="@Model.Num_Usuario" class="form-control" id="Num_Usuario" placeholder="Num_Usuario">
                </div>
                <div class="form-group">
                    <label for="inputName">Nome</label>
                    <input type="text" value="" class="form-control" id="Nome_Usuario" name="Nome_Usuario">
                </div>
                <div class="form-group">
                    <label for="inputLastName">Data Nascimento</label>
                    <input type="date" class="form-control" id="Dat_Nascimento" name="Dat_Nascimento">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail">Telefone</label>
                    <input type="text" class="form-control" id="Num_TelFixo" name="Num_TelFixo">
                </div>
                <div class="form-group">
                    <label for="email">Celular</label>
                    <input type="text" class="form-control" id="Num_Celular" name="Num_Celular">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="email" class="form-control" id="Email_Usuario" name="Email_Usuario">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="Senha_Usuario" name="Senha_Usuario">
                </div>
               

                <div class="form-group">
                    <label for="exampleInputFile">Foto</label>
                    <input type="file" id="Foto_usuario" name="Foto_usuario">

                </div>

                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
        <div role="tabpanel" class="tab-pane" id="profile">Profile</div>
        <div role="tabpanel" class="tab-pane" id="messages">Messages</div>
        <div role="tabpanel" class="tab-pane" id="settings">Settings</div>
    </div>
</div>

<script src="~/Lib/Perfil.js?d=@DateTime.Now.Ticks"></script>
<script>
    cargo.init({
        urls: {
            cargos: '@Url.Action("GetCargos", "Usuario")',
        }
    });

</script>         